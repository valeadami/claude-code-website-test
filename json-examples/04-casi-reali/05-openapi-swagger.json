{
  "descrizione": "Esempio di documentazione API in formato OpenAPI/Swagger",
  "note": "OpenAPI è lo standard per documentare API REST",

  "openapi": "3.0.0",
  "info": {
    "title": "API Gestione Utenti",
    "description": "API per la gestione di utenti, autenticazione e profili",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "api@esempio.it",
      "url": "https://support.esempio.it"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://api.esempio.it/v1",
      "description": "Server di Produzione"
    },
    {
      "url": "https://api-staging.esempio.it/v1",
      "description": "Server di Staging"
    },
    {
      "url": "http://localhost:3000/v1",
      "description": "Server di Sviluppo"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Ottieni lista utenti",
        "description": "Restituisce una lista paginata di tutti gli utenti",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Numero pagina",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Numero di risultati per pagina",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10,
              "maximum": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista utenti recuperata con successo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "users": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/User"
                      }
                    },
                    "pagination": {
                      "$ref": "#/components/schemas/Pagination"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Non autorizzato"
          },
          "500": {
            "description": "Errore del server"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "summary": "Crea nuovo utente",
        "description": "Crea un nuovo utente nel sistema",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Utente creato con successo"
          },
          "400": {
            "description": "Richiesta non valida"
          },
          "409": {
            "description": "Utente già esistente"
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "summary": "Ottieni dettagli utente",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Dettagli utente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Utente non trovato"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "username": {
            "type": "string",
            "example": "mario.rossi"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "mario@esempio.it"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "UserCreate": {
        "type": "object",
        "required": ["username", "email", "password"],
        "properties": {
          "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 30
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 8
          }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "current_page": {
            "type": "integer"
          },
          "total_pages": {
            "type": "integer"
          },
          "total_items": {
            "type": "integer"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
