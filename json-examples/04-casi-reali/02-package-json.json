{
  "descrizione": "Esempio di package.json di un progetto Node.js/npm",
  "note": "Questo file configura dipendenze, script e metadati di un progetto",

  "name": "mio-progetto-web",
  "version": "1.0.0",
  "description": "Un'applicazione web moderna con React e Node.js",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "webpack --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\"",
    "deploy": "npm run build && npm run deploy:prod"
  },
  "keywords": [
    "react",
    "nodejs",
    "web-app",
    "javascript"
  ],
  "author": {
    "name": "Mario Rossi",
    "email": "mario@esempio.it",
    "url": "https://mariorossi.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mariorossi/mio-progetto.git"
  },
  "bugs": {
    "url": "https://github.com/mariorossi/mio-progetto/issues"
  },
  "homepage": "https://github.com/mariorossi/mio-progetto#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.15",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
